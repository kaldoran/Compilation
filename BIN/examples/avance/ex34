% PROGRAMME GESTION CONTACT %

type date : 
	struct
		jour : int;
		mois : int;
		annee : int;
	end struct;

type adresse : 
	struct 
		numero : int;
		estrue : bool;
		estchemin : bool;
		estboulevard : bool;
		estautre : bool;
		adresse : string;
		codePostal : int;
	end struct;

type contact : 
	struct
		nom : string;
		prenom : string;
		date_naissance : date;
		marier : bool;
		dateajout : date;
		email : string;
		adresse_contact : adresse;
	end struct;

type carnet : array [0..20, 0 .. 20] of contact;

var moncarnet : carnet;
var datetime : date;
var adr : adresse;

proc init_adresse ()
    start {
        adr.numero = 0;
        adr.estrue = 0;
        adr.estchemin = 0;
        adr.estboulevard = 0;
        adr.estautre = 1;
        adr.adresse = "";
        adr.codePostal = 0;
    };

proc init_date() 
start {
	datetime.jour = 0;
	datetime.mois = 0;
	datetime.annee = 0;
};

proc init()
    var i : int;
    start {
        for ( i=0 ; i == 100 ; i++) do {
            moncarnet[i][0].nom = "";
            moncarnet[i][0].prenom = "";
            init_date();
            moncarnet[i][0].marier = 0;
            init_date();
            moncarnet[i][0].email = "";
            init_adresse();
        }
    };


function existe(prenom : string, nom : string) return bool
var i : int;
var existe : bool;
start {
	existe = false;
	while ( i <= 100) do {
		if ( moncarnet[i][0].prenom == prenom and moncarnet[i][0].dateajout.jour  and moncarnet[i][0].nom == nom ) then {
			existe = !existe;
			return existe;
		}
		i++;
	}
	return existe;
};

function addcarnet(prenom : string, nom : string) return bool
var i : int;
start {
	while( i <= 100) do {
		if(prenom == "" or nom == "" or init_date() ) then {
			write("Erreur !");
			return 0;
		}
		if ( moncarnet[i][0].prenom == "" or moncarnet[i][0].nom == "") then {
			moncarnet[i][0].prenom = prenom;
			moncarnet[i][0].nom = nom;
			
			return i;
		}

	}
	return 0;
};

var homme, femme : contact;

proc mariage() 
var i : int;

start {
	if ( i = existe ( homme.prenom , homme.nom) != 0 ) then {
		moncarnet[1][i].nom = femme.nom;
	}
	else {
		i = addcarnet(homme.prenom, homme.nom); // ajout pour avoir un emplacement vide
		moncarnet[0][i].nom = homme.nom; # homme associÃ© pour recuperer entierement les info
		moncarnet[1][i].nom = femme.nom; // mariage en cours
	}

};


start { 
	init(); 
	init();
	addcarnet("Jean", "Bonnot");
	write("%d",existe("Jean","Bonnot"));
	write("%d",!!!!!existe("Janne","Bonnot"));
	write("%d",existe("rien" , 0)); 

	write("Au revoir !");
	
}


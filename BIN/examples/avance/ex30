% PROGRAMME EXOTIQUE %
		--- La programmation exotique ---
			--	--
   

type ensembleFruit : array[0..100] of int;

type smoothie : struct
	fraise : char;
	nb_fraise : int;
	banane : char;
	nb_banane : int;
end struct;

function mix(quantite : float) return char 
    start {
        write("Vous avez demandé %%cl de jus de fruits\n", quantite);
    	return "jus de fruit";
    };

function rand10(min : int, max : int) return int 
    start {
         return (min * (rand() / 20) - max);
    };

proc randommix(smoothie : int) 

    var rand1 : int;
    var rand2 : int;
    var continu : bool;
    var ensemblef : ensembleFruit;

    start {

        do {
            ensemblef[25] = 1;
            ensemblef[12] = (rand1 = rand() + smoothie);
            ensemblef[36] += (rand2 = rand() + smoothie);
            mix(ensemblef[3]);

            write("%d fraises mixée , %d banane mixée",rand1,rand2);
            write("Pour quitter trouver le bon nombre");
            read (continu);
        } 
        while ( continu == rand () );

    };


var banane : bool;
var mangue : string; 

start {
	banane = "banane" + "orange" > "noix de coco";
        randommix(banane);
	return "salade de fruit";
	write("on peut ajouter une %s ",mangue);
}


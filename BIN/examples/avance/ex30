% PROGRAMME EXOTIQUE %
		--- La programmation exotique ---
			--	--
   

type ensembleFruit : array[0..100] of int;

type smoothie : struct
	fraise : char;
	nb_fraise : int;
	banane : char;
	nb_banane : int;
end struct;

function mix(ensembleFruit:ensembleFruit) return char 
    start {
    	return "jus de fruit";
    };


function rand10(min : int, max : int) return int 
    start {
         return (min * (rand() / 20) - max);
    };

proc randommix(smoothie : smoothie) 
    var rand1 : int;
    var rand2 : int;
    var continu : bool;
    var ensemblef : ensembleFruit;

    start {

        do {
            ensemblef = 1;
            ensemblef[1].banana = (rand1 = rand()  + smoothie.nb_fraise);
            ensemblef = (rand2 = rand() + smoothie.nb_banane);
            mix(ensemblef);

            write("%d fraises mixée , %d banane mixée",rand1,rand2);
            write("Pour quitter trouver le bon nombre");
            read (continu);
        } 
        while ( continu == rand () );

    };


var banane : bool;
var mangue : string[60]; 

start {
	banane = "banane" + "orange" > "noix de coco";
	return "salade de fruit";
	write("on peut ajouter une %s ",mangue);
}

